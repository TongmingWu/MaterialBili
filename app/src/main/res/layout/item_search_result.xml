<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/bili_drawerbg_logined"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_result_desc"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:ellipsize="end"
            android:layout_below="@id/pic"
            android:maxLines="2"
            android:padding="5dp"
            android:textColor="#b000"
            android:textSize="12sp"
            tools:text="视频描述"/>

        <!--up主-->
        <ImageView
            android:id="@+id/iv_info_up"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textColor="#b000"
            android:layout_below="@id/tv_result_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_category_up" />

        <TextView
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_result_desc"
            android:layout_toRightOf="@id/iv_info_up"
            android:textColor="#b000"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="10sp"
            tools:text="阿婆主"/>

        <ImageView
            android:id="@+id/iv_info_play"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/iv_info_up"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_info_views2" />

        <!--播放数-->
        <TextView
            android:id="@+id/tv_result_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_info_up"
            android:textColor="#b000"
            android:layout_toRightOf="@id/iv_info_play"
            android:layout_alignBottom="@id/iv_info_play"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="10sp"
            tools:text="1324"/>

        <ImageView
            android:id="@+id/iv_info_danmu"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/iv_info_up"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_answer_danmaku2" />

        <!--评论数-->
        <TextView
            android:id="@+id/tv_result_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b000"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_info_up"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            tools:text="1324"
            android:layout_alignBottom="@id/iv_info_danmu"
            android:layout_toRightOf="@id/iv_info_danmu"/>
    </RelativeLayout>
</LinearLayout>