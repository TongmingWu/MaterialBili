<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_login"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/iv_day"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_switch_night"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/iv_day"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/iv_day"
                android:src="@drawable/ic_navigation_header_notification"/>

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="莫到家了"/>

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="30dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_userName"
                android:layout_alignBottom="@id/tv_userName"
                android:src="@drawable/ic_lv0"/>

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/iv_level"
                android:layout_alignBottom="@id/iv_level"
                android:src="@drawable/ic_user_male"/>

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_userName"
                android:layout_marginTop="3dp"
                android:text="正式会员"
                android:textColor="#cbffffff"/>

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_member"
                android:layout_marginTop="3dp"
                android:textColor="#cbffffff"
                tools:text="硬币:20"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_outLogin"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_outLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_outLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_outLogin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="未登录"
                android:textColor="#cbffffff"
                android:textSize="16sp"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>